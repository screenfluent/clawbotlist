{
	"name": "clawbotlist-scaffold",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "bun run check",
		"typecheck": "bun run check",
		"test": "vitest run",
		"deploy:dry-run": "bunx wrangler deploy --dry-run",
		"deploy": "bunx wrangler deploy",
		"db:migrate:local": "bunx wrangler d1 migrations apply clawbotlist-db --local",
		"db:migrate:remote": "bunx wrangler d1 migrations apply clawbotlist-db --remote",
		"db:seed:local": "bun run src/lib/server/projects/seed-import.ts",
		"db:seed:remote": "bun run src/lib/server/projects/seed-import.ts --remote",
		"db:refresh:metrics:local": "bun run src/lib/server/projects/refresh-metrics.ts"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260217.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.2.3",
		"better-sqlite3": "^12.6.2",
		"drizzle-kit": "^0.31.9",
		"eslint": "^10.0.0",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.7",
		"drizzle-orm": "^0.45.1"
	}
}
